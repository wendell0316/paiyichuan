/* add.wxss */
page{
  height: 100%;
  background-color: #f0f0f2;
}
.section{
  display: flex;
  justify-content: flex-end;
  height: 3.5rem;
}
.section_title text{
  font-size: 0.9rem;
  line-height: 1.8rem;
  margin-right: 1rem;
}
.content{
  width: 80%;
  margin: 0 auto;
  padding-top: 4.5rem 
}
picker{
  width: 60%;
  border: 1px solid #888888;
  border-radius: 0.3rem;
  background-color: white;
  overflow: hidden;
  height: 1.5rem;
}
.picker{
  font-size: 0.8rem;
  line-height: 1.5rem;
  padding-left: 0.5rem;
  color: #888;
  position: relative;
  
}
.next{
  width: 30%;
  margin: 0 auto;
  height: 1.6rem;
  line-height: 1.6rem;
  border: 1px solid #888888;
  bottom: -5rem;
  font-size: 0.8rem
  
}
.pulldown{
width:0.8rem;
height:1.2rem;
position:absolute;
top:0.2rem;
left:8.6rem;

}
.ctrl_pic{
  width: 40%;
  height: 3.5rem;
  overflow: hidden;
}
.farm_pic{
  
  height: 3.5rem;
  width: 49%;
  float: left;
  margin-left: 1%
}
.farm_pic image{
  width: 100%;
  float: left;
  margin-left: 1%;
  height: 3.5rem;

}
.add_pic{
  clear: both;
  height: 3rem;
  overflow: hidden
}
.detail{
  
  height: 3.5rem;
  line-height:3.5rem;
text-align:center;

}
.add{
  height: 3.5rem;
  line-height:3.5rem;
text-align:center;
}
.add image{
 width: 1.2rem;
  height: 1.2rem;
}
.more_pic{
  width: 20%;
}
.detail image{
  width: 1.2rem;
  height: 1.2rem;
  
}
.view image{
  width: 100%
}
.view{
  width: 100%;
  z-index: 100;
  background-color: black

}